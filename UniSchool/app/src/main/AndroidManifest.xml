<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.codetribe1.unischool" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
        <provider
            android:name="com.example.codetribe1.unischool.providers.ContentProvider.NewsContentProvider"
            android:authorities="com.example.codetribe1.unischool.providers.ContentProviderUtil"/>
        <provider
            android:name="com.example.codetribe1.unischool.providers.ContentProvider.StudentsContentProvider"
            android:authorities="com.example.codetribe1.unischool.providers.ContentProviderUtil"/>

    </application>

</manifest>
